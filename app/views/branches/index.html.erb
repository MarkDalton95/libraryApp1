<h1>Listing branches</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Opening time</th>
      <th>Closing time</th>
      <th>Branch image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @branches.each do |branch| %>
      <tr>
        <td><%= branch.address %></td>
        <td><%= branch.opening_time %></td>
        <td><%= branch.closing_time %></td>
		<td><%= image_tag(branch.branch_image, :alt=> "Image not displaying!", :size => "140x100") %></td>
        <td><%= link_to 'Show', branch %></td>
        <td><%= link_to 'Edit', edit_branch_path(branch) %></td>
        <td><%= link_to 'Destroy', branch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Branch', new_branch_path %>
